#using UserToUI.*
#using AttrCondDefLibrary.*

#rule R23LowBattery #with UserToUI

#source { 
	c:Context{
		-platcontext->p
	}
	p:Platform{
		++ -batterymode->bm
	}
	++ bm:LowBatterymode{
		BatteryLevel <= 15
	}
}

#target {
	a:App{
		-layout->l
	}
	l:Layout{
		-colorScheme->cs
	}
	cs:BlacknWhite{
		BlacknWhiteMode == true
	}
}

#correspondence {
	c2a:ContextToApp{
		#src->c
		#trg->a
	}
	p2l:PlatformToLayout{
		#src->p
		#trg->l
	}
}

#attributeConditions{
	eq_boolean(bm.Charging, false)
}


#rule R24Charging #with UserToUI

#source { 
	c:Context{
		-platcontext->p
	}
	p:Platform{
		++-batterymode->bm
	}
	
	++ bm:NormalBatterymode{
		BatteryLevel  > 15
	}
	
}

#target {
	a:App{
		-layout->l
	}
	l:Layout{
		-colorScheme->cs
	}
	cs:CustomColor{
		BlacknWhiteMode == false
	}
}

#correspondence {
	c2a:ContextToApp{
		#src->c
		#trg->a
	}
	p2l:PlatformToLayout{
		#src->p
		#trg->l
	}
}

#attributeConditions{
	eq_boolean(bm.Charging, true)
}
